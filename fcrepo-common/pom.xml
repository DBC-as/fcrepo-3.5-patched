          </filesets>
        </configuration>
      </plugin> -->
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-codegen-plugin</artifactId>
        <version>${cxf.version}</version>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <configuration>
              <sourceRoot>
                ${project.build.directory}/generated-sources/cxf
              </sourceRoot>
              <useCompileClasspath>true</useCompileClasspath>
              <wsdlOptions>
                <!-- API-M -->
                <wsdlOption>
                  <wsdl>${basedir}/../resources/wsdl/Fedora-API-M.wsdl
                  </wsdl>
                  <!--<extraargs> <extraarg>-impl</extraarg><extraarg>-verbose</extraarg><extraarg>-validate</extraarg><extraarg>-verbose</extraarg> 
                    </extraargs> -->
                  <bindingFiles>
                    <bindingFile>${basedir}/../resources/wsdl/bindings/JAX-WS-API-M-Bindings.xml
                    </bindingFile>
                    <bindingFile>${basedir}/../resources/wsdl/bindings/JAX-B-Bindings.xml
                    </bindingFile>
                  </bindingFiles>
                </wsdlOption>
                <!-- API-M MTOM -->
                <wsdlOption>
                  <wsdl>${basedir}/../resources/wsdl/Fedora-API-M-MTOM.wsdl
                  </wsdl>
                  <bindingFiles>
                    <bindingFile>${basedir}/../resources/wsdl/bindings/JAX-WS-API-M-BindingsMTOM.xml
                    </bindingFile>
                    <bindingFile>${basedir}/../resources/wsdl/bindings/JAX-B-BindingsMTOM.xml
                    </bindingFile>
                  </bindingFiles>
                </wsdlOption>
                <!-- API-A -->
                <wsdlOption>
                  <wsdl>${basedir}/../resources/wsdl/Fedora-API-A.wsdl
                  </wsdl>
                  <bindingFiles>
                    <bindingFile>${basedir}/../resources/wsdl/bindings/JAX-WS-API-A-Bindings.xml
                    </bindingFile>
                    <bindingFile>${basedir}/../resources/wsdl/bindings/JAX-B-Bindings.xml
                    </bindingFile>
                  </bindingFiles>
                </wsdlOption>
                <!-- API-A MTOM -->
                <wsdlOption>
                  <wsdl>${basedir}/../resources/wsdl/Fedora-API-A-MTOM.wsdl
                  </wsdl>
                  <bindingFiles>
                    <bindingFile>${basedir}/../resources/wsdl/bindings/JAX-WS-API-A-BindingsMTOM.xml
                    </bindingFile>
                    <bindingFile>${basedir}/../resources/wsdl/bindings/JAX-B-BindingsMTOM.xml
                    </bindingFile>
                  </bindingFiles>
                </wsdlOption>

              </wsdlOptions>
            </configuration>
            <goals>
              <goal>wsdl2java</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

